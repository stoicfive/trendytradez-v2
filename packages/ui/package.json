{
  "name": "@trendytradez/ui",
  "version": "0.1.0",
  "description": "UI components for TrendyTradez using Tailwind CSS and Tremor",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "tsc && tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "@tremor/react": "^3.14.0",
    "@trendytradez/types": "workspace:*",
    "@trendytradez/theme": "workspace:*",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "typescript": "^5.8.0",
    "vitest": "^3.0.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
