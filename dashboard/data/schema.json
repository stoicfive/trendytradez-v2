{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TrendyTradez Dashboard Data Schema",
  "type": "object",
  "required": ["meta", "stats", "packages"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["lastUpdated", "version"],
      "properties": {
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        }
      }
    },
    "stats": {
      "type": "object",
      "required": ["plansComplete", "packagesCreated", "currentPhase"],
      "properties": {
        "plansComplete": {
          "type": "object",
          "required": ["current", "total", "percentage"],
          "properties": {
            "current": { "type": "integer", "minimum": 0 },
            "total": { "type": "integer", "minimum": 1 },
            "percentage": { "type": "integer", "minimum": 0, "maximum": 100 }
          }
        },
        "packagesCreated": {
          "type": "object",
          "required": ["current", "total", "percentage"],
          "properties": {
            "current": { "type": "integer", "minimum": 0 },
            "total": { "type": "integer", "minimum": 1 },
            "percentage": { "type": "integer", "minimum": 0, "maximum": 100 }
          }
        },
        "currentPhase": { "type": "string" },
        "weeksTotal": { "type": "string" }
      }
    },
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "status"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["complete", "in-progress", "pending"]
          }
        }
      }
    },
    "currentStatus": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "description", "status"],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "status": { "type": "string", "enum": ["complete", "in-progress", "pending"] }
        }
      }
    },
    "nextActions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "description", "status"],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "status": { "type": "string", "enum": ["active", "queued"] },
          "priority": { "type": "string", "enum": ["high", "medium", "low"] }
        }
      }
    },
    "blockers": {
      "type": "object",
      "required": ["hasBlockers", "message"],
      "properties": {
        "hasBlockers": { "type": "boolean" },
        "message": { "type": "string" }
      }
    },
    "recentCommits": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["message", "hash", "date"],
        "properties": {
          "message": { "type": "string" },
          "hash": { "type": "string" },
          "date": { "type": "string" }
        }
      }
    }
  }
}
