    "glob": "^11.0.3",
    "happy-dom": "^20.0.8",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "live-server": "^1.2.2",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.8.0"
