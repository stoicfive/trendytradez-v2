{
  "name": "trendytradez-v2",
  "version": "2.0.0-alpha",
  "private": true,
  "description": "Next-generation trading dashboard platform",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
